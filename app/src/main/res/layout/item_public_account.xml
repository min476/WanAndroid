<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/allWrap"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginTop="5dp"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        style="@style/HwWm"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#c4c6c8"
        app:cardCornerRadius="10dp"
        app:cardElevation="0px"
        app:cardUseCompatPadding="false"
        >
        <RelativeLayout
            style="@style/allWrap">
            <ImageView
                android:id="@+id/item_public_account_img"
                android:layout_width="132dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_temp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/item_public_account_title"
               style="@style/allWrap"
                android:textSize="16sp"
                android:text="文章标题"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:layout_toRightOf="@id/item_public_account_img"
                />

            <TextView
                android:id="@+id/item_public_account_content"
                style="@style/allWrap"
                android:textSize="14sp"
                android:text="文章内容111111111111111111111111"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/item_public_account_title"
                android:layout_toRightOf="@id/item_public_account_img"
                />
            <ImageView
                android:id="@+id/item_public_account_visible_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_see"
                android:layout_below="@id/item_public_account_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/item_public_account_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="1"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_public_account_content"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>