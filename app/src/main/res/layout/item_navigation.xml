<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_navigation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h10"
        android:layout_marginTop="@dimen/dp_10"
        tools:text="@string/knowledge_hierarchy"
        android:textSize="@dimen/h16"
        android:textColor="@color/color_5b5d5c"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/item_navigation_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/h12"
        app:max_select="0" />
</LinearLayout>