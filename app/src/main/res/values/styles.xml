<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/color_topBarSteep</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--占满父类容器-->
    <style name="allMatch">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--包裹内容宽高-->
    <style name="allWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--包裹内容高度，宽度占满全屏-->
    <style name="HwWm">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--包裹内容宽度，高度占满全屏-->
    <style name="HmWw">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--45dp行高-->
    <style name="line">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--45dp行高-->
    <style name="linesW">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_d7d7d7</item>
    </style>
    <!--宽高45dp-->
    <style name="minHw">
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">45dp</item>
    </style>

    <!--设置状态栏为透明色-->
    <style name="loginStartBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <!--title styl标题栏-->
    <style name="toolBarStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
    <item name="contentInsetStart">0dp</item>
    <item name="android:background">@color/colorMain</item>
    </style>


    <!--标题栏设置-->
    <style name="ActionBarThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--@style/Material.Drawable.Ripple.Touch.Light-->
    <style name="SubTitles" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/h16</item>
        <!--<item name="rd_cornerRadius">0dp</item>-->
        <item name="android:gravity">center</item>
    </style>

    <!-- 标题栏 文字-->
    <style name="TitleTexts" parent="allMatch">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/h20</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DialogStyle_1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--设置透明主题-->
    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
